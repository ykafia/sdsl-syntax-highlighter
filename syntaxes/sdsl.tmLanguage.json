{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "SDSL",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"include": "#types"
				},
				{
				"name": "keyword.control.sdsl",
				"match": "\\b(if|while|for|return|stage|stream|virtual|abstract|compose|foreach|var|shader|(void|bool|byte|sbyte|half|uint|int|float|double)|((bool|byte|sbyte|half|uint|int|float|double)[2-4])|((bool|byte|sbyte|half|uint|int|float|double)[2-4]x[2-4]))\\b"
				}
		]
		},
		"strings": {
			"name": "string.quoted.double.sdsl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.sdsl",
					"match": "\\.*\\."
				}
			]
		}
	},
	"scopeName": "source.sdsl"
}